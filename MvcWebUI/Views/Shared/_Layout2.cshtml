    <script type="text/javascript">
        $(function () {
            var pageCount = 0;
            GetListFromService();
            $("#sayfaSayisiAzalt").hide();
            $("#sayfaSayisiArtir").on("click", function () {
                pageCount++;
                if (pageCount >= 1) {
                    $("#sayfaSayisiAzalt").show();
                }
                GetListFromService();
            });
            $("#sayfaSayisiAzalt").on("click", function () {
                pageCount--;
                if (pageCount <= 1) {
                    $("#sayfaSayisiAzalt").hide();
                }
                GetListFromService();
            });
            $("#search").click(function () {

                GetListFromService();
            });

            $("#recordNumber").change(function () {

                GetListFromService();
            });

            function GetListFromService() {
                var _form = $("#searchForm")[0];
                var model = new FormData(_form);
                model.append("page", pageCount);
                model.append("recordCount", parseInt($("#recordNumber").val()));
                model.append("searchkey", $("#searchKey").val())
                $.ajax({
                    type: "POST",
                    url: "/RFQ/GetRFQList",
                    data: model,
                    processData: false,
                    contentType: false,
                    success: function (data, textStatus, jqXHR) {
                        $("#normalList").html("");
                        console.log(data);
                        for (var i = 0; i < data.length; i++) {
                            var deadline = new Date(data[i].rfqDeadline);
                            var deliver = new Date(data[i].delivaryDate);
                            //normalList
                            var a = "";
                            a += "<tr data-toggle='modal' data-target='#exampleModal' attr='" + data[i].id + "'>";
                            a += "<td>" + data[i].title + "</td>";
                            //a += " <td> <img src='~/img/icons/lock.svg' alt='' srcset=''></td>";
                            a += " <td>" + data[i].quantity + "</td>";
                            a += "<td>" + deadline.toLocaleDateString("tr-TR") + "</td>";
                            a += "<td>" + deliver.toLocaleDateString("tr-TR") + "</td>";
                            a += "<td>" + (data[i].rfqTechnologies.length > 2 ? data[i].rfqTechnologies[0].technology.technologyName + " ..." : data[i].rfqTechnologies[0].technology.technologyName) + "</td>";
                            a += "<td>" + (data[i].rfqCertifications.length > 2 ? data[i].rfqCertifications[0].certification.certificateName + " ..." : data[i].rfqCertifications[0].certification.certificateName) + "</td>";
                            a += "<td>" + (data[i].rfqMaterials.length > 2 ? data[i].rfqMaterials[0].material.materialName + " ..." : data[i].rfqMaterials[0].material.materialName) + "</td>";
                            a += "<td>" + data[i].rfqFiles.length + "</td>";
                            a += "<tr />";
                            //a += " <td  class='detailItems'><i class='fas fa-ellipsis-v'  ></i></td>";
                            $("#normalList").prepend(a);
                        }

                    },
                    error: function (err) {
                        console.log(err);
                    }
                    //onClick='getItem(" + data[i].id + ")'
                });
            }
            $("#clearfilter").click(function () {
                pageCount = 1;
                $('#searchForm')[0].reset();
                $(".filter-option-inner-inner").each(function (e) {
                    $(".filter-option-inner-inner")[e].innerHTML = "Nothing selected";
                });
                GetListFromService();

            });
            $(document).on('click', 'tr', function (e) {
                debugger;
                var rfqId = parseInt(e.target.parentNode.attributes[2].nodeValue);
                //RFQ Ayrıntı Göster
                $.ajax({
                    type: 'POST',
                    url: 'Rfq/GetRfqById?id=' + rfqId,
                    success: function (res) {
                        debugger;
                        var rfq = res.rfq;
                        var user = res.company;
                        var certificates = "";
                        var tecnologies = "";
                        var materials = "";
                        var files = "";
                        $("#OlusturulmaTarihi").text(new Date(rfq.atCreated).toLocaleDateString("tr-TR"));
                        $("#SonTarih").text(new Date(rfq.rfqDeadline).toLocaleDateString("tr-TR"));
                        $("#TeslimTarihi").text(new Date(rfq.delivaryDate).toLocaleDateString("tr-TR"));
                        $("#ParaBirimi").text(getOfferCurrency(rfq.offerCurrency));
                        $("#temelaciklama").text(rfq.basicInformation);
                        $("#miktar").text(rfq.quantity);
                        $("#ihtiyac").text(getNeed(rfq.need));
                        $("#uzunluk").text(rfq.length);
                        $("#genislik").text(rfq.width);
                        $("#cap").text(rfq.diameter);
                        $("#yukseklik").text(rfq.height);
                        $("#minhatapayi").text(rfq.minTol);
                        $("#sirketadi").text(user.companyName);
                        $("#sirketbuyuklugu").text(getCompanySize(user.companySize));
                        $("#sirketkurulustarihi").text(user.yearOfEstablisment);
                        $("#sirkettelefon").text(user.phoneNumber);
                        for (var i = 0; i < rfq.rfqTechnologies.length; i++) {
                            tecnologies += rfq.rfqTechnologies[i].technology.technologyName + "<br />";
                        }
                        $("#teknolojiler").html(tecnologies);
                        for (var i = 0; i < rfq.rfqMaterials.length; i++) {
                            materials += rfq.rfqMaterials[i].material.materialName + "<br />";
                        }
                        $("#materyaller").html(materials);


                        for (var i = 0; i < rfq.rfqCertifications.length; i++) {
                            certificates += rfq.rfqCertifications[i].certification.certificateName + "<br />";
                        }
                        $("#sertifikalar").html(certificates);

                        for (var i = 0; i < rfq.rfqFiles.length; i++) {
                            files += "<a href='/getfile/" + rfq.rfqFiles[i].id + "'>File" + (i + 1) + "</a><br />";
                        }
                        $("#documents").html(files);
                        console.log(res);
                    },
                    error: function (err) {
                        console.log(err);
                    }
                })


            });
        });

        function getOfferCurrency(enumType) {
            enumType = parseInt(enumType);
            if (enumType === @((int)EMoneyTypes.EUR)) {
                return "EUR";
            }
            else if (enumType === @((int)EMoneyTypes.USD)) {
                return "USD";
            }
            else {
                return "TR";
            }

        }

        function getCompanySize(enumType) {
             if (enumType === 1) {
                return "1-9";
            }
            else if (enumType === 2) {
                return "10-49";
            }
            else if (enumType === 3) {
                return "50-149";
            }
             else if (enumType === 4) {
                 return "500-999";
            }
             else if (enumType === 5) {
                 return "1000-1999";
            }
             else if (enumType === 5) {
                 return "2000-4999";
             }
        }

        function getNeed(ihtiyacTipi) {
            ihtiyacTipi = parseInt(ihtiyacTipi);
            if (ihtiyacTipi === 1) {
                return "Tek Seferlik Gereksinim";
            } else{
                return "Yıllık Gereksinim";
            }


        }
