            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/AnaSayfa">Home </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">Buyers</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link " href="#">Manufacturers</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link " href="/Pricing/Index">Pricing</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link " href="#">Services</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link " href="#">About Us</a>
                </li>
            </ul>
            <div class="row">
                <div class="col-md-7">
                    <form class="form-inline my-2 my-lg-0" asp-action="Register" asp-controller="Login" method="Get">
                        <button class="btn btn-sign-up my-2 my-sm-0">Yeni Kayıt</button>
                    </form>
                </div>
                <div class="col-md-5">
                    <form class="form-inline my-2 my-lg-0" asp-action="Login" asp-controller="Login" method="Get">
                        <button class="btn btn-sign-up my-2 my-sm-0">Giriş</button>
                    </form>
                </div>
            </div>
                
        </div>
    </nav>
    <!-- navbar -->

    <!-- content -->
  @RenderBody()
