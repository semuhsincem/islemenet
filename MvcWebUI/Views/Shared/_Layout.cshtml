<body>
    <!-- top-navbar -->
    <div class="top-navbar">
        <div class="container-fluid topbar">
            <div class="contact-address">
                <div class="phone-number">
                    <img src="~/img/logos/logo_photo/icons8-phone-24 (1).png" />
                    <span>+0-625-07520-664</span>
                </div>
                <div class="email-address">
                    <img src="~/img/logos/logo_photo/icons8-mail-50 (1).png" width="24" height="24" alt="" />
                    <span>info@example.com</span>
                </div>
            </div>
            <div class="topbar-buttons">
                <ul>
                    <li><a href="">Careers</a></li>
                    <li><a href="">Feedback</a></li>
                    <li><a href="">Updates</a></li>
                </ul>
                <div class="language">
                    <button class="btn btn-change-language">
                        <img src="~/img/eng-flag.svg" alt="">
