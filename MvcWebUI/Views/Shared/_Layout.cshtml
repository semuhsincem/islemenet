                    </button>
                    <a href="">
                        <img src="~/img/logos/logo_photo/icons8-goal-48.png" width="24" height="24" alt="" />
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- top-navbar -->

    <!-- navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <a class="navbar-brand" href="#"><img src="img/order-fox-logo.svg" alt=""></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
