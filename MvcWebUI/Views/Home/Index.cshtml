@{
    ViewData["Title"] = "Home Page";
    Layout = "/Views/Shared/_Layout2.cshtml";
}




<ul class="nav nav-pills tab-menu-buttons" id="pills-tab" role="tablist">
    <li class="nav-item tab-menu-button" role="presentation">
        <a class="nav-link active" id="pills-search-tab" data-toggle="pill" href="#pills-search" role="tab"
           aria-controls="pills-search" aria-selected="true"> <i class="fas fa-search"></i> &nbsp;RFQ ARAMA</a>
    </li>
    <li class="nav-item tab-menu-button" role="presentation">
        <a class="nav-link" id="pills-create-tab" data-toggle="pill" href="#pills-create" role="tab"
           aria-controls="pills-create" aria-selected="false"><i class="far fa-file"></i> &nbsp; YENİ RFQ OLUŞTUR</a>
    </li>
    <li class="nav-item tab-menu-button" role="presentation">
        <a class="nav-link" id="pills-my-tab" data-toggle="pill" href="#pills-my" role="tab"
           aria-controls="pills-my" aria-selected="false"><i class="far fa-file-alt"></i> &nbsp; RFQLARIM </a>
    </li>
    <li class="nav-item tab-menu-button" role="presentation">
        <a class="nav-link" id="pills-sent-tab" data-toggle="pill" href="#pills-sent" role="tab"
           aria-controls="pills-sent" aria-selected="false"><i class="fas fa-bars"></i> &nbsp; SENT QUOTES </a>
    </li>
    <li class="nav-item tab-menu-button" role="presentation">
        <a class="nav-link" id="pills-search-comp-tab" data-toggle="pill" href="#pills-search-comp" role="tab"
           aria-controls="pills-search-comp" aria-selected="false">
            <i class="fas fa-search"></i> &nbsp; ŞİRKET
            ARAMA
        </a>
    </li>
    <li class="nav-item tab-menu-button" role="presentation">
        <a class="nav-link" id="pills-other-tab" data-toggle="pill" href="#pills-other" role="tab"
           aria-controls="pills-other" aria-selected="false">
            <i class="fas fa-ellipsis-h"></i> &nbsp; DİĞER
            ÖZELLİKLER
        </a>
    </li>
    <li class="nav-item tab-menu-button" role="presentation">
        <a class="nav-link" id="pills-help-tab" data-toggle="pill" href="#pills-help" role="tab"
           aria-controls="pills-help" aria-selected="false"><i class="far fa-question-circle"></i> &nbsp; YARDIM</a>
    </li>
</ul>

<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-search" role="tabpanel" aria-labelledby="pills-search-tab">
        <div class="tab-header">
            <h4>
                RFQLAR İÇİNDE ARAMA
            </h4>
            Akıllı filtreleri kullanarak yeni bir arama başlatın ve bir e-posta bildirimi ayarlayın
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    @await Component.InvokeAsync("SearchRFQ") 
                </div>

                <div class="col-md-9">
                   @await Component.InvokeAsync("RFQList") 
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-9">
                    <div class="create-rfq-div">
                        <h4>Üreticiler için önemli!</h4>
                        <p>
                            İş yükünüz çok fazlaysa veya makineniz bozulursa, kısa sürede kalifiye CNC İmalat şirketlerine dış kaynak sağlayabilirsiniz.
                        </p>
                        <button class="btn btn-create-rfq">
                            YENİ BİR RFQ OLUŞTUR
                        </button>
                    </div>

                    <div class="new-companies mt-3">
                        @await Component.InvokeAsync("Companies")
                    </div>
                </div>
                <div class="col-md-3">
                   @await Component.InvokeAsync("NewCompanies") 
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade bg-white" id="pills-create" role="tabpanel" aria-labelledby="pills-create-tab">
        @await Component.InvokeAsync("CreateRFQ") 
    </div>
    <div class="tab-pane fade" id="pills-my" role="tabpanel" aria-labelledby="pills-my-tab">...b</div>
    <div class="tab-pane fade" id="pills-sent" role="tabpanel" aria-labelledby="pills-sent-tab">...c</div>
    <div class="tab-pane fade" id="pills-search-comp" role="tabpanel" aria-labelledby="pills-search-comp-tab">
        ...d
    </div>
    <div class="tab-pane fade" id="pills-other" role="tabpanel" aria-labelledby="pills-other-tab">...e</div>
    <div class="tab-pane fade" id="pills-help" role="tabpanel" aria-labelledby="pills-help-tab">...f</div>
</div>