                        <div class="alert alert-danger"> @Html.Raw(TempData[ConstantHelper.ErrorMessage])</div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Kapat</button>
